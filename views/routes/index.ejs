<% layout('layouts/boilerplate') %>
<div id="map" style="width:100%; height: 500px;"></div>
    <h1>All Routes</h1>
    <div><a href="/routes/new">Add Route</a></div>

    <% for (let route of routes) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <%if(route.images.length) {%>
                        <img class="img-fluid" alt="" src="<%= route.images[0].url %>">
                    <% }else {%>
                    <img class="img-fluid" alt="" src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                    <% } %>    
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= route.title%></h5>
                        <h5 class="card-title"><%= route.properties.popUpMarkup%></h5>
                        <p class="card-text"><%= route.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%= route.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/routes/<%=route._id%>">View <%= route.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% }%>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const routes = {features: <%- JSON.stringify(routes) %> }   
    </script>

    <script src="/javascripts/clusterMap.js"></script>