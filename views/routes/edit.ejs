<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Route</h1>
    <div class="col-6 offset-3">
        <form action="/routes/<%=route._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="route[title]"
                    value="<%=route.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="route[location]"
                    value="<%=route.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    <label for="image" class="form-label custom-file"> Add Images</label>
                    <input class="form-control custom-file-lable" type="file" id="image" name="image" multiple>
                </div>
            </div>
            <div class="mb-3">
                <% route.images.forEach(function(img,i) {%>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?<label></label>
               
                <% }) %> 
            </div>
            <div class="mb-3">
                <label class="form-label" for="distance">Distance of the Route</label>
                <div class="mb-3">
                    <input class="form-control" type="text" id="route" name="route[distance]"
                        value="<%=route.distance %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="route[description]"
                    required><%= route.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Route</button>
            </div>
        </form>
        <a href="/routes/<%= route._id%>">Back To Routes</a>

    </div>
</div>