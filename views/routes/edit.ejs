<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Route</h1>
        <div class="col-6 offset-3">
            <h1>Add new Route</h1>
            <form action="/routes/<%= route._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <lable class="form-lable" for="title">Title</lable>
                    <input class="form-control" type="text" id="title" name="route[title]" value="<%= route.title%>">
                </div>
                <div class="mb-3">
                    <lable class="form-lable" for="location">Location</lable>
                    <input class="form-control" type="text" id="location" name="route[location]" value="<%= route.location %>">
                </div>
                <div class="mb-3">
                    <lable class="form-lable" description="distance">Distance</lable>
                    <input class="form-control" type="text" id="distance" name="route[distance]" value="<%= route.distance %>"></input>
                </div>
                <div class="mb-3">
                    <lable class="form-lable" for="image">Image URL</lable>
                    <input class="form-control" type="text" id="image" name="route[image]"value="<%= route.image %>">
                </div>
                <div class="mb-3">
                    <lable class="form-lable" description="image">Description</lable>
                    <textarea class="form-control" type="text" id="description" name="route[description]"><%= route.description %>"></textarea>
                </div>
                <div class="mb-3">
                <button class="btn btn-info">Update Route</button>
                </div>
            </form>
            <a href="/routes/<%= route._id %>">Back to Route</a>
        </div>
    </div>