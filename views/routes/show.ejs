<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3" >
            <div class="card mb-3 >
                <img src="<%= route.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= route.title %></h5>
                  <p class="card-text"><%= route.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted"><%= route.location %></li>
                  <li class="list-group-item"><%= route.distance%> km</li>
              
                </ul>
                <div class="card-body">
                    <a class="btn btn-info" href="/routes/<%=route._id %>/edit">Edit</a>
                    <form class="d-inline" action="/routes/<%=route._id%>?_method=DELETE" method="POST">
                        <button class= "btn btn-danger">Delete</button>
                    </form>
                </div>
              </div>
              <div class="card-footer text-muted">
                2 days ago
              </div>
        </div>
    </div>

  