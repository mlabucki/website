<% layout('layouts/boilerplate')%>

<h1>Login</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <lable class="form-lable" for="username">Username</lable>
        <input class="form-control" type="text" id="image" name="username" required >
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <lable class="form-lable" for="password">Password</lable>
        <input class="form-control" type="password" id="password" name="password" required >
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <button class="btn btn-success">Login</button>
</form>